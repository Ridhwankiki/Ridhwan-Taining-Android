        <ImageView
            android:id="@+id/ivPromo"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/promo1"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>